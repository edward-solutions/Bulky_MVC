@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th> </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(x => x.Id))
        {
            <tr>
                <td class="py-1 px-2">@obj.Title</td>
                <td class="py-1 px-2">@obj.ISBN</td>
                <td class="py-1 px-2">@obj.Price</td>
                <td class="py-1 px-2">@obj.Author</td>
                <td class="py-1 px-2">@obj.Category?.Name</td>
                <td class="text-end py-1 px-2">
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-controller="Product"
                           asp-action="Upsert"
                           asp-route-id="@obj.Id"
                           class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product"
                           asp-action="Delete"
                           asp-route-id="@obj.Id"
                           class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>