@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Product</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <label asp-for="Title" class="p-0"></label>
        <input asp-for="Title" disabled class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Description" class="p-0"></label>
        <input asp-for="Description" type="text" disabled class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Author" class="p-0"></label>
        <input asp-for="Author" type="text" disabled class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="ISBN" class="p-0"></label>
        <input asp-for="ISBN" type="text" disabled class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="ListPrice" class="p-0"></label>
        <input asp-for="ListPrice" type="text" disabled class="form-control" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Price" class="p-0"></label>
        <input asp-for="Price" type="text" disabled class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Price50" class="p-0"></label>
        <input asp-for="Price50" type="text" disabled class="form-control" />
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Price100" class="p-0"></label>
        <input asp-for="Price100" type="text" disabled class="form-control" />
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>
    <div class="text-end">
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-outline-dark form-control" style="width:150px">Back</a>
        <button type="submit" class="btn btn-danger form-control" style="width:150px">Delete</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />

