@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Category</h2>
        <hr/>
    </div>
    <div class="mb-3 row">
        <label class="p-0">Category Name</label>
        <input type="text" class="form-control"/>
    </div>
    <div class="mb-3 row">
        <label ="p-0">Display Order</label>
        <input type="text" class="form-control" />
    </div>
    <div class="text-end">
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-outline-dark form-control" style="width:150px">Back</a>
        <button type="submit" class="btn btn-primary form-control" style="width:150px">Save</button>
    </div>
</form>