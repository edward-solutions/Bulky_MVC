@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Edit Category</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="mb-3 row">
        <label asp-for="DisplayOrder" class="p-0"></label>
        <input asp-for="DisplayOrder" disabled type="text" class="form-control" />
    </div>
    <div class="text-end">
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-outline-dark form-control" style="width:150px">Back</a>
        <button type="submit" class="btn btn-danger form-control" style="width:150px">Save</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />

